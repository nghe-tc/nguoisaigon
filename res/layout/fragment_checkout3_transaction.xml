<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/checkout3TransactionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvCheckout3ProductName"
            android:layout_width="200sp"
            android:layout_height="30sp"
            android:gravity="center_vertical"
            android:text="@string/cart_productname_default"
            android:textColor="@android:color/black"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/tvCheckout3TransactionQuantity"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="220sp"
            android:gravity="center_vertical"
            android:text="@string/cart_quantity_default"
            android:textColor="@android:color/black"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/tvCheckout3TransactionPrice"
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:layout_marginLeft="270sp"
            android:gravity="right|center_vertical"
            android:text="@string/cart_quantity_default"
            android:textColor="@android:color/black"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/tvCheckout3TransactionTotal"
            android:layout_width="110sp"
            android:layout_height="30sp"
            android:layout_marginLeft="380sp"
            android:gravity="right|center_vertical"
            android:text="@string/cart_total_default"
            android:textColor="@android:color/black"
            android:textSize="7pt" />
    </FrameLayout>

</LinearLayout>