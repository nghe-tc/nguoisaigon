<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvEventsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230sp"
            android:layout_marginTop="77sp"
            android:text="@string/date_full_default"
            android:textColor="@color/events_currentdate_color"
            android:textSize="7.5pt" />

        <TextView
            android:id="@+id/tvEventsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="102sp"
            android:text="@string/title_default"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventsContent"
            android:layout_width="365sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="150sp"
            android:text="@string/content_default"
            android:textColor="@android:color/black"
            android:textSize="6pt" />
    </FrameLayout>

</ScrollView>